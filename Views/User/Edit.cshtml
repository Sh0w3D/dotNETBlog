@model User 
@{
    ViewData["Title"] = "Edit User";
}


<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit User</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Nick"></label>
            <input asp-for="Nick" class="form-control" />
            <span asp-validation-for="Nick" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 10%">Update</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width: 10%">Back to list</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

