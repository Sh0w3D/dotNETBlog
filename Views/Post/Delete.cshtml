@model Post 
@{
    ViewData["Title"] = "Delete Post";
}


<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Post</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="AuthorID"></label>
            <input asp-for="AuthorID" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CreatedAt"></label>
            <input asp-for="CreatedAt" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width: 15%">Delete Post</button>
        <a asp-controller="Post" asp-action="Index" class="btn btn-secondary" style="width: 10%">Back to list</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

