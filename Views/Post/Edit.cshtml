@model Post 
@{
    ViewData["Title"] = "Edit Post";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Post</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Content"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AuthorID"></label>
            <input asp-for="AuthorID" class="form-control"/>
            <span asp-validation-for="AuthorID" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 10%">Update</button>
        <a asp-controller="Post" asp-action="Index" class="btn btn-secondary" style="width: 10%">Back to list</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}