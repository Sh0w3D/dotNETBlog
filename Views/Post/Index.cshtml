@model IEnumerable<Post>
@{
    ViewData["Title"] = "Blog article list";
}

<partial name="_Notification" />
<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Post List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;  Create New Post
            </a>
        </div>
    </div>
    <br /> <br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Post title</th>
                <th>Post content</th>
                <th>Post Creation Time</th>
                <th>Post Author</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="30%">@obj.Title</td>
                    <td width="50%">@obj.Content</td>
                    <td>@obj.CreatedAt</td>
                    <td>@obj.AuthorID</td>
